{
  "manifest_version": 3,
  "name": "SyncTube 유튜브 재생목록 생성기",
  "version": "1.0.0",
  "description": "Collects currently playing tracks from a SyncTube-like site and exports them to CSV or a YouTube playlist.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_title": "SyncTube Exporter",
    "default_popup": "src/popup.html"
  },
  "options_page": "src/options.html",
  "permissions": [
    "storage",
    "identity",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/",
    "https://www.youtube.com/*",
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "src/youtube.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "minimum_chrome_version": "114"
}
