{
  "manifest_version": 3,
  "name": "Nomangho Playlist Exporter",
  "version": "1.0.0",
  "description": "Send the current SyncTube song to the Nomangho playlist service.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_title": "Nomangho Playlist Exporter",
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://nomangho.duckdns.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://sync-tube.de/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "minimum_chrome_version": "114"
}
